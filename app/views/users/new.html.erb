<div class="container">
	<h1 class="text-center m-2">Inscription</h1>
	<%= form_for @user, url: {action:"create"} do |f| %>

		<!-- FIRST_NAME -->
		<div class="form-group">
			<label>Prenom :</label>
			<%= f.text_field :first_name, class: "form-control" %>
		</div>

		<!-- LAST_NAME  -->
		<div class="form-group">
			<label>Nom de famille :</label>
			<%= f.text_field :last_name, class: "form-control" %>
		</div>

		<!-- EMAIL -->
		<div class="form-group">
			<label>E-mail :</label>
			<%= f.text_field :email, class: "form-control" %>
		</div>

		<!-- CITY
		<div class="form-group">
			<label>Ville :</label>
		</div> -->

		<!-- PASSWORD -->
		<div class="form-group">
			<label>Mot de passe :</label>
			<%= f.text_field :password, type: "password", class: "form-control" %>
		</div>

		<!-- PASSWORD CONFIRMATION -->
		<div class="form-group">
			<label>Mot de passe - CONFIRMATION :</label>
			<%= f.text_field :password_confirmation, type: "password", class: "form-control" %>
		</div>

		<!-- AGE -->
		<div class="form-group">
			<label>Age :</label>
			<%= f.text_field :age, class: "form-control" %>	
		</div>

		<!-- DESCRIPTION -->
		<div class="form-group">
			<label>Description :</label>
			<%= f.text_area :desc, class: "form-control" %>
		</div>

		<!-- BUTTON -->		    
		<div class="form-group">
			<button type="submit" class="btn btn-success btn-lg btn-block">S'inscrire !</button>
		</div>

	<% end %>

</div>
