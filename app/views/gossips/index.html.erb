<div class="container-fluid p-4 mx-2" style="height: 300px">
	<h1 class="text-center mb-3">TOUS LES GOSSIPS</h1>
	<div class="container text-center">
		<a href="<%= new_gossip_path %>" class="btn btn-primary mb-3">Creer un Gossip</a>
		<a href="<%= cities_path %>" class="btn btn-primary mb-3">Voir toutes les Villes</a>
	</div>
	<div class="d-flex">
		<div class="row justify-content-md-around justify-content-between align-items-center my-1">
			<% @gossip_arr.each do |gossip| %>
				<div class="col-md-6 col-lg-4 col-xl-3 p-1">
					<div class="card text-center mx-auto" style="width: 15rem; height: auto;">
						<div class="card-header">
							<%= link_to "#{gossip.title}", gossip_path(gossip.id) %>
						</div>
						<div class="card-body">
							<p class="card-text"><%= gossip.content %></p>
							<div class="btn btn-info, text-white bg-dark">by <%=link_to "#{gossip.user.first_name}", user_path(gossip.user_id)%> </div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
